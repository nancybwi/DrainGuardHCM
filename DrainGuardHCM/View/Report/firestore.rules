rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========================================
    // REPORTS COLLECTION
    // ========================================
    match /reports/{reportId} {
      // Anyone authenticated can create reports
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own reports
      allow read: if isAuthenticated() 
                  && resource.data.userId == request.auth.uid;
      
      // Users can update their own reports (for status tracking)
      allow update: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
      
      // Only allow deletion by owner
      allow delete: if isOwner(resource.data.userId);
    }
    
    // ========================================
    // IMAGE HASHES COLLECTION (for duplicate detection)
    // ========================================
    match /image_hashes/{hashId} {
      // Allow authenticated users to create hashes
      allow create: if isAuthenticated();
      
      // Allow authenticated users to read hashes (for duplicate checking)
      allow read: if isAuthenticated();
      
      // No updates or deletes needed for hashes
      allow update, delete: if false;
    }
    
    // ========================================
    // DRAINS COLLECTION
    // ========================================
    match /drains/{drainId} {
      // Anyone can read drain locations
      allow read: if true;
      
      // Only allow creation/updates through admin (or Cloud Functions)
      allow write: if false;
    }
    
    // ========================================
    // USERS COLLECTION (if you add user profiles)
    // ========================================
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
    }
    
    // ========================================
    // DEFAULT: Deny all other access
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
